<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workoutscontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.astuetz.PagerSlidingTabStrip
    android:id="@+id/ladderstabs"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@color/white"
    android:textColor="@color/grey"
    app:pstsTabSwitch="true"
    app:pstsActivateTextColor="@color/flatred"
    app:pstsDeactivateTextColor="@color/grey" />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/ladderspager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ladderstabs" />

</RelativeLayout>